{
  "manifest_version": 3,
  "name": "Password Generator",
  "version": "1.0.0",
  "description": "Generate passwords with separators directly in the popup.",
  "action": {
    "default_popup": "popup.html",
    "default_title": "Password Generator",
    "default_icon": {
      "16": "icon.png",
      "32": "icon.png",
      "48": "icon.png",
      "128": "icon.png"
    }
  },
  "icons": {
    "16": "icon.png",
    "32": "icon.png",
    "48": "icon.png",
    "128": "icon.png"
  },
  "permissions": ["storage"]
}
